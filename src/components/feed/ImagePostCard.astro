---
// Componente para mostrar posts de tipo "image"
interface Props {
  author: string;
  authorImage: string;
  title: string;
  location: string;
  image: string;
  description: string;
  likes: number;
  comments: number;
  date: string;
}

const { author, authorImage, title, location, image, description, likes, comments, date } = Astro.props;
---

<div class="bg-white rounded-lg overflow-hidden shadow-md">
  <!-- Cabecera del post con información del autor -->
  <div class="flex items-center p-4">
    <img src={authorImage} alt={author} class="w-10 h-10 rounded-full object-cover">
    <div class="ml-3">
      <p class="font-medium text-gray-900">{author}</p>
      <p class="text-xs text-gray-500">{date}</p>
    </div>
  </div>
  
  <!-- Imagen principal del post -->
  <img src={image} alt={title} class="w-full h-64 object-cover">
  
  <!-- Contenido del post -->
  <div class="p-4">
    <h3 class="font-semibold text-lg">{title}</h3>
    <p class="text-xs text-gray-500 mb-2">{location}</p>
    <p class="text-sm text-gray-700 mb-4">{description}</p>
    
    <!-- Acciones del post (me gusta, comentar) -->
    <div class="flex justify-between items-center">
      <div class="flex space-x-4">
        <button class="flex items-center text-gray-500 hover:text-primary">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
          </svg>
          <span class="text-sm">{likes}</span>
        </button>
        <button class="flex items-center text-gray-500 hover:text-primary">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
          </svg>
          <span class="text-sm">{comments}</span>
        </button>
      </div>
      <button class="text-primary text-sm font-medium">Ver más</button>
    </div>
  </div>
</div> 