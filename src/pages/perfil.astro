---
import Layout from '../layouts/Layout.astro';

// Datos simulados para el perfil
const userProfile = {
  name: "Karo Cespedez",
  username: "@Karo_trips",
  bio: "Exploradora de lugares remotos | Fotógrafa aficionada | Amante de la naturaleza y la cultura boliviana",
  profileImage: "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRoi4u_al-tmJXUESVyAZWaQ3inIFODOf0Tbw&s",
  coverImage: "https://scontent.flpb1-2.fna.fbcdn.net/v/t39.30808-6/480767729_590280787213096_3367183671897581955_n.jpg?stp=cp6_dst-jpg_s960x960_tt6&_nc_cat=103&ccb=1-7&_nc_sid=cc71e4&_nc_ohc=QTMd8fT7czgQ7kNvwHZXS0t&_nc_oc=AdkjS11iHJ4TRRZ6tIZAdNNe0PyzMqCp0pqSCaGQmRJd1oAk6y56JVhPTsth05rlqcQ&_nc_zt=23&_nc_ht=scontent.flpb1-2.fna&_nc_gid=OHJltj4fzsDO6bMk30o5JQ&oh=00_AfOGZgX0qlFfNVLp5GjFNOzHEYjRIhhC7Lg06Lmly_0jYg&oe=6861FD18",
  location: "Santa Cruz, Bolivia",
  stats: {
    posts: 8,
    followers: 1586,
    following: 142,
  },
  isOwner: false, // Cambiar a true para ver la vista de propietario
