---
interface Props {
  title?: string;
  showBackButton?: boolean;
  showNotification?: boolean;
}

const { title = "Tour Click", showBackButton = false, showNotification = true } = Astro.props;
---

<header class="bg-white shadow-sm mb-4 sticky top-0 z-10 w-full border-b border-gray-200">
  <div class="container mx-auto px-4 py-3 flex items-center justify-between">
    <div class="flex items-center">
      <img src="/assets/images/logo/tour.jpg" alt="Tour Click" class="h-8 w-auto mr-2">
      <h1 class="text-lg font-semibold text-primary">{title}</h1>
    </div>
    
    <button id="logoutBtn" class="text-gray-700 rounded-full p-2 hover:bg-gray-100">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
      </svg>
    </button>
  </div>
</header>

<script>
  // Funcionalidad para cerrar sesión
  document.getElementById('logoutBtn')?.addEventListener('click', () => {
    // Redirigir a la página de login
    window.location.href = '/login';
  });
</script>